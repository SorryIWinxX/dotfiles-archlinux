# Shades of Purple Alacritty
# https://github.com/ahmadawais/shades-of-purple-alacritty

# Colors
colors:
  bright:
    black: '#000000'
    blue: '#1bccfd'
    cyan: '#99d6fc'
    green: '#21f6bc'
    magenta: '#e6aefe'
    red: '#ff8aa4'
    white: '#ffffff'
    yellow: '#fff787'
  cursor:
    cursor: '#ffffff'
    text: '#ffffff'
  normal:
    black: '#000000'
    blue: '#00bfff'
    cyan: '#86cbfe'
    green: '#00fbac'
    magenta: '#df95ff'
    red: '#ff7092'
    white: '#ffffff'
    yellow: '#fffa6a'
  primary:
    background: '#332a57'
    foreground: '#e5e5e5'
  selection:
    background: '#c1deff'
    text: '#000000'
font:
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
    style: Bold
  italic:
    family: Hack Nerd Font
    style: Italic
  bold_italic:
    family: Hack Nerd Font
    style: Bold Italic
  size: 12.0
  use_thin_strokes: true

window:
  opacity: 0.6
cursor:
  # Cursor style
  style:
    # Cursor shape
    #
    # Values for `shape`:
    #   - â–‡ Block
    #   - _ Underline
    #   - | Beam
    shape: Beam

    # Cursor blinking state
    #
    # Values for `blinking`:
    #   - Never: Prevent the cursor from ever blinking
    #   - Off: Disable blinking by default
    #   - On: Enable blinking by default
    #   - Always: Force the cursor to always blink
    blinking: Always
    blink_interval: 350
    unfocused_hollow: false
theme: cyberpunk
