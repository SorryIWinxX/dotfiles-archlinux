# Shades of Purple Alacritty
# https://github.com/ahmadawais/shades-of-purple-alacritty

# Colors
colors:
  bright:
    black: '#535353'
    blue: '#9fa9ff'
    cyan: '#8df9ff'
    green: '#22ff18'
    magenta: '#e09aff'
    red: '#fb0007'
    white: '#ffffff'
    yellow: '#fedc2b'
  cursor:
    cursor: '#d0d0d0'
    text: '#151515'
  normal:
    black: '#000000'
    blue: '#5665ff'
    cyan: '#50d2da'
    green: '#1cd915'
    magenta: '#b052da'
    red: '#d70005'
    white: '#e0e0e0'
    yellow: '#d9bd26'
  primary:
    background: '#090909'
    foreground: '#cdcdcd'
  selection:
    background: '#780002'
    text: '#ececec'
font:
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
    style: Bold
  italic:
    family: Hack Nerd Font
    style: Italic
  bold_italic:
    family: Hack Nerd Font
    style: Bold Italic
  size: 12.0
  use_thin_strokes: true

window:
  opacity: 0.6
cursor:
  # Cursor style
  style:
    # Cursor shape
    #
    # Values for `shape`:
    #   - â–‡ Block
    #   - _ Underline
    #   - | Beam
    shape: Beam

    # Cursor blinking state
    #
    # Values for `blinking`:
    #   - Never: Prevent the cursor from ever blinking
    #   - Off: Disable blinking by default
    #   - On: Enable blinking by default
    #   - Always: Force the cursor to always blink
    blinking: Always
    blink_interval: 350
    unfocused_hollow: false
theme: deep
