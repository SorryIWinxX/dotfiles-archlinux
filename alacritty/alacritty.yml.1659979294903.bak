# Shades of Purple Alacritty
# https://github.com/ahmadawais/shades-of-purple-alacritty

# Colors
colors:
  name: Garuda (dr460nized)
  author: dr460nf1r3
  primary:
    background: '0x0a1124'
    foreground: '0xeec49a'
  cursor:
    text: '0x0a1124'
    cursor: '0xeec49a'
  normal:
    black: '0x0a1124'
    red: '0x5F4149'
    green: '0xEB3247'
    yellow: '0xBC4349'
    blue: '0xF35645'
    magenta: '0xF6A73B'
    cyan: '0xFAD32F'
    white: '0xeec49a'
  bright:
    black: '0xa6896b'
    red: '0x5F4149'
    green: '0xEB3247'
    yellow: '0xBC4349'
    blue: '0xF35645'
    magenta: '0xF6A73B'
    cyan: '0xFAD32F'
    white: '0xeec49a'
font:
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
    style: Bold
  italic:
    family: Hack Nerd Font
    style: Italic
  bold_italic:
    family: Hack Nerd Font
    style: Bold Italic
  size: 12.0
  use_thin_strokes: true

window:
  opacity: 0.6
cursor:
  # Cursor style
  style:
    # Cursor shape
    #
    # Values for `shape`:
    #   - â–‡ Block
    #   - _ Underline
    #   - | Beam
    shape: Beam

    # Cursor blinking state
    #
    # Values for `blinking`:
    #   - Never: Prevent the cursor from ever blinking
    #   - Off: Disable blinking by default
    #   - On: Enable blinking by default
    #   - Always: Force the cursor to always blink
    blinking: Always
    blink_interval: 350
    unfocused_hollow: false
theme: Garuda.dr460nized
