# Shades of Purple Alacritty
# https://github.com/ahmadawais/shades-of-purple-alacritty

# Colors
colors:
  bright:
    black: '#686868'
    blue: '#6871ff'
    cyan: '#60fdff'
    green: '#5ffa68'
    magenta: '#bd35ec'
    red: '#ff6e67'
    white: '#ffffff'
    yellow: '#fffc67'
  cursor:
    cursor: '#76ff9f'
    text: '#ffffff'
  normal:
    black: '#101116'
    blue: '#0271b6'
    cyan: '#00c5c7'
    green: '#00dc84'
    magenta: '#ca30c7'
    red: '#ff0051'
    white: '#c7c7c7'
    yellow: '#faf945'
  primary:
    background: '#1c153d'
    foreground: '#e41951'
  selection:
    background: '#c1deff'
    text: '#000000'
font:
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
    style: Bold
  italic:
    family: Hack Nerd Font
    style: Italic
  bold_italic:
    family: Hack Nerd Font
    style: Bold Italic
  size: 12.0
  use_thin_strokes: true

window:
  opacity: 0.6
cursor:
  # Cursor style
  style:
    # Cursor shape
    #
    # Values for `shape`:
    #   - â–‡ Block
    #   - _ Underline
    #   - | Beam
    shape: Beam

    # Cursor blinking state
    #
    # Values for `blinking`:
    #   - Never: Prevent the cursor from ever blinking
    #   - Off: Disable blinking by default
    #   - On: Enable blinking by default
    #   - Always: Force the cursor to always blink
    blinking: Always
    blink_interval: 350
    unfocused_hollow: false
theme: Scarlet Protocol
