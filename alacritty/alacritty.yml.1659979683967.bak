# Shades of Purple Alacritty
# https://github.com/ahmadawais/shades-of-purple-alacritty

# Colors
colors:
  bright:
    black: '#666666'
    blue: '#709aed'
    cyan: '#7adff2'
    green: '#66ff66'
    magenta: '#db67e6'
    red: '#ff0080'
    white: '#ffffff'
    yellow: '#f3d64e'
  cursor:
    cursor: '#4d4d4d'
    text: '#ffffff'
  normal:
    black: '#2a2a2a'
    blue: '#396bd7'
    cyan: '#66ccff'
    green: '#79ff0f'
    magenta: '#b449be'
    red: '#ff0000'
    white: '#bbbbbb'
    yellow: '#e7bf00'
  primary:
    background: '#000000'
    foreground: '#f2f2f2'
  selection:
    background: '#414141'
    text: '#ffffff'
font:
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
    style: Bold
  italic:
    family: Hack Nerd Font
    style: Italic
  bold_italic:
    family: Hack Nerd Font
    style: Bold Italic
  size: 12.0
  use_thin_strokes: true

window:
  opacity: 0.6
cursor:
  # Cursor style
  style:
    # Cursor shape
    #
    # Values for `shape`:
    #   - â–‡ Block
    #   - _ Underline
    #   - | Beam
    shape: Beam

    # Cursor blinking state
    #
    # Values for `blinking`:
    #   - Never: Prevent the cursor from ever blinking
    #   - Off: Disable blinking by default
    #   - On: Enable blinking by default
    #   - Always: Force the cursor to always blink
    blinking: Always
    blink_interval: 350
    unfocused_hollow: false
theme: PaulMillr
