# Shades of Purple Alacritty
# https://github.com/ahmadawais/shades-of-purple-alacritty

# Colors
colors:
  bright:
    black: '#2b2f46'
    blue: '#00b4e0'
    cyan: '#00b4e0'
    green: '#58db9e'
    magenta: '#b3a1e6'
    red: '#ff4821'
    white: '#b3b692'
    yellow: '#f6a100'
  cursor:
    cursor: '#edf2c2'
    text: '#0e101a'
  normal:
    black: '#0e101a'
    blue: '#00a3cb'
    cyan: '#00a3cb'
    green: '#5dcd97'
    magenta: '#795ccc'
    red: '#e03600'
    white: '#ebefc0'
    yellow: '#e39500'
  primary:
    background: '#0e101a'
    foreground: '#ebefc0'
  selection:
    background: '#37382d'
    text: '#ebefc0'
font:
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
    style: Bold
  italic:
    family: Hack Nerd Font
    style: Italic
  bold_italic:
    family: Hack Nerd Font
    style: Bold Italic
  size: 12.0
  use_thin_strokes: true

window:
  opacity: 0.6
cursor:
  # Cursor style
  style:
    # Cursor shape
    #
    # Values for `shape`:
    #   - â–‡ Block
    #   - _ Underline
    #   - | Beam
    shape: Beam

    # Cursor blinking state
    #
    # Values for `blinking`:
    #   - Never: Prevent the cursor from ever blinking
    #   - Off: Disable blinking by default
    #   - On: Enable blinking by default
    #   - Always: Force the cursor to always blink
    blinking: Always
    blink_interval: 350
    unfocused_hollow: false
theme: duckbones
