# Shades of Purple Alacritty
# https://github.com/ahmadawais/shades-of-purple-alacritty

# Colors
colors:
  bright:
    black: '#1d1d19'
    blue: '#61b9d0'
    cyan: '#d63865'
    green: '#a7d42c'
    magenta: '#695abc'
    red: '#d22a24'
    white: '#ffffff'
    yellow: '#ff8949'
  cursor:
    cursor: '#708284'
    text: '#002831'
  normal:
    black: '#1d1d19'
    blue: '#5096be'
    cyan: '#d63865'
    green: '#9fd364'
    magenta: '#695abc'
    red: '#f18339'
    white: '#ffffff'
    yellow: '#f4ef6d'
  primary:
    background: '#1d1f21'
    foreground: '#b8dbef'
  selection:
    background: '#2b2a24'
    text: '#ffffff'
font:
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
    style: Bold
  italic:
    family: Hack Nerd Font
    style: Italic
  bold_italic:
    family: Hack Nerd Font
    style: Bold Italic
  size: 12.0
  use_thin_strokes: true

window:
  opacity: 0.6
cursor:
  # Cursor style
  style:
    # Cursor shape
    #
    # Values for `shape`:
    #   - â–‡ Block
    #   - _ Underline
    #   - | Beam
    shape: Beam

    # Cursor blinking state
    #
    # Values for `blinking`:
    #   - Never: Prevent the cursor from ever blinking
    #   - Off: Disable blinking by default
    #   - On: Enable blinking by default
    #   - Always: Force the cursor to always blink
    blinking: Always
    blink_interval: 350
    unfocused_hollow: false
theme: Flatland
